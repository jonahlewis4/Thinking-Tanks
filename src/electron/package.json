{
  "name": "thinking-tanks-gui",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/main.js",
  "scripts": {
    "dev": "vite",
    "dev:electron": "NODE_ENV=development tsc --project tsconfig.electron.json && electron .",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev:electron\"",
    "build:vite": "vite build",
    "build:electron": "tsc --project tsconfig.electron.json",
    "build": "npm run build:vite && npm run build:electron",
    "preview": "vite preview",
    "start": "npm run build && electron .",
    "clean": "rm -rf dist node_modules/.vite"
  },
  "devDependencies": {
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "electron": "38.0.0-beta.6",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.6.0",
    "vite": "^6.0.11"
  },
  "dependencies": {
    "react": "^19.2.1",
    "react-dom": "^19.2.1"
  }
}